---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<header class="text-center mb-8">
  <h1 class="text-3xl md:text-4xl font-bold text-indigo-600 dark:text-indigo-400 mb-2">{title}</h1>
  <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300">{subtitle}</p>
</header>