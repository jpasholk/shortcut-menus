---
interface Props {
  title: string;
  headerRight?: boolean;
  class?: string;
}

const { title, headerRight = false, class: className = "" } = Astro.props;
---

<section class={`bg-white dark:bg-gray-800/75 backdrop-blur-sm rounded-lg shadow-md p-4 sm:p-6 ${className}`}>
  <div class="flex justify-between items-center mb-4 sm:mb-6">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-white">{title}</h2>
    {headerRight && (
      <div class="header-right">
        <slot name="header-right" />
      </div>
    )}
  </div>
  <div class="flex-1 flex flex-col">
    <slot />
  </div>
</section>